@{
    bool isAdmin = User.FindAll(ClaimTypes.Role).Any(Roles => Roles.Value == "Admin");
}

<div class="main-sidebar">
    <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
            <a href="index.html">PocoPanel</a>
        </div>
        <div class="sidebar-brand sidebar-brand-sm">
            <a href="index.html">PL</a>
        </div>
        <ul class="sidebar-menu">
            <li class="menu-header">Dashboard</li>
            <li class="nav-item dropdown @*active*@">
                <a href="#" class="nav-link has-dropdown"><i class="fas fa-fire"></i><span>Dashboard</span></a>
                <ul class="dropdown-menu">
                    <li @*class="active"*@>
                        <a class="nav-link" href="~/Admin/Panel/Index">Dashboard</a>
                    </li>
                    @if (isAdmin)
                    {
                        <li>
                            <a class="nav-link" href="~/Admin/Panel/Providers">Providers</a>
                        </li>
                    }
                </ul>
            </li>
            @if (isAdmin)
            {
                <li class="nav-item dropdown @*active*@">
                    <a href="#" class="nav-link has-dropdown"><i class="fab fa-artstation"></i><span>Services</span></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="nav-link" href="~/Admin/Panel/Products">Manage Services</a>
                        </li>
                        <li>
                            <a class="nav-link" href="~/Admin/Panel/DeletedProducts">Deleted Services</a>
