            }
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link has-dropdown"><i class="fas fa-user"></i><span>Settings</span></a>
                    <ul class="dropdown-menu">
                        <li class="active">
                            <a class="nav-link" href="~/Admin/Panel/Profile">Profile</a>
                        </li>
                    </ul>
                </li>
            </ul>
    </aside>
</div>